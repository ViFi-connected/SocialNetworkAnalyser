@page "/"
@using SocialNetworkAnalyser.Shared
@using SocialNetworkAnalyser.Shared.Dtos
@using SocialNetworkAnalyser.Shared.Interfaces
@inject IDatasetService DatasetService
@inject NavigationManager Navigation

<PageTitle>Available Datasets</PageTitle>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Available Datasets</h5>
                </div>
                <div class="card-body">
                    @if (datasets == null)
                    {
                        <p>Loading...</p>
                    }
                    else if (!datasets.Any())
                    {
                        <p>No datasets available.</p>
                    }
                    else
                    {
                        <ul class="list-group">
                            @foreach (var dataset in datasets)
                            {
                                <li class="list-group-item list-group-item-action" @onclick="() => ViewStats(dataset.Id)" style="cursor: pointer;">
                                    @dataset.Name
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<DatasetDto>? datasets;

    protected override async Task OnInitializedAsync()
    {
        datasets = await DatasetService.GetAllDatasetsAsync();
    }

    private void ViewStats(int datasetId)
    {
        Navigation.NavigateTo($"/stats/{datasetId}");
    }
}
